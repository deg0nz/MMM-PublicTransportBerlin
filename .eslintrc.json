{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:json/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "default-case": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "import/no-unresolved": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["current"]
      }
    ],
    "prefer-destructuring": "off"
  }
}
