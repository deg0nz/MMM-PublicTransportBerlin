{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": ["airbnb-base", "plugin:json/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "default-case": "off",
    "global-require": "off",
    "prefer-destructuring": "off",
    "prettier/prettier": "error",
    "import/no-dynamic-require": "off",
    "import/no-unresolved": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["current"]
      }
    ]
  }
}
